<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.blinkbox.com/"
	plugin="http://www.blinkbox.com/flash/*"
	initialState="playing"
	version="1.0"
	identifier="com.plexapp.plugins.blinkbox">
    
    <crop x="0" y="0" width="0" height="370" />
    
	<!-- Playing -->
	<state name="playing">
		<event>
        	<condition>
				<command name="pause" />
			</condition>

        	<action>
				<click x="24" y="393" />
				<goto state="paused" />
        	</action>
    	</event>
	</state>
    
	<!-- Paused -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="24" y="393" />
				<goto state="playing" />
			</action>
		</event>
	</state>

</site>